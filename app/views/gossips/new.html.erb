  <body class="text-white ">

<center><h1>Crée un gossip !</h1>
    <p>Balance ton gossip via le formulaire ci-dessous</p>

    <%= form_tag url_for(action: 'create'), method: "post" do %>





      <%= label_tag 'Titre   ' %>
      <%= text_field_tag 'title' %>
      <br /> <br />




      <%= label_tag 'Contenu' %>
      <%= text_field_tag 'gossip'%>
      <br /> <br />


      <%= submit_tag "Valider" %>

    <% end %>

    <br/></center>
    <center><% if @gossip.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
        <ul>
          <% @gossip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>

    <% end %>
</div></center>

